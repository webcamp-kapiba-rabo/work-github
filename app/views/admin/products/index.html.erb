<div class="container">
  <div class="row">
    <div class="col-md-12">
        <h2 class="marker">商品一覧</h2>
            <a href="/admin/products/new" class="products1"><span class="fas fa-plus-circle fa-2x nav-link fa-pull-right" aria-hidden="true"></span></a>
        <table class="table" style= "width: 900px;margin: 0 auto;">
            <thead>
                <tr  bgcolor="lightgray">
                    <th style = "width: 20%;">商品ID</th>
                    <th style = "width: 25%;">商品名</th>
                    <th style = "width: 15%;">税抜価格</th>
                    <th style = "width: 20%;">ジャンル</th>
                    <th style = "width: 20%;">ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                    <tr>
                        <td><h2 class="product-id"><%= product.id %></h2></td>
                        <td><h2 class="product-name"><%= product.name %></h2></td>
                        <td><h2 class="product-price"><%= product.excluding_tax_price %></h2></td>
                        <td><h2 class="product-genre"><%= product.genre %></h2></td>
                        <td><h2 class="product-status"><%= product.sale_status %></h2></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @products %>

    </div>
  </div>
</div>