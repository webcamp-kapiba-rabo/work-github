<div class='row'>
<div class="offset-md-1 col-md-8">
        <h2>商品一覧</h2>
        <%= link_to "", new_admin_product_path, class: "far fa-plus-circle" %>
        <!--font Awesomeで＋ボタンを新規追加-->
        <table class="table">
            <thead>
                <tr>
                    <th style = "width: 10%;">商品ID</th>
                    <th style = "width: 25%;">商品名</th>
                    <th style = "width: 15%;">税抜価格</th>
                    <th style = "width: 30%;">ジャンル</th>
                    <th style = "width: 20%;">ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                    <tr>
                        <td><h2 class="product-id"><%= product.id %></h2></td>
                        <td><h2 class="product-name"><%= product.name %></h2></td>
                        <td><h2 class="product-price"><%= product.excluding_tax_price %></h2></td>
                        <td><h2 class="product-genre"><%= product.genre.name %></h2></td>
                        <td><h2 class="product-status"><%= product.sale_status %></h2></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<%= paginate @products %>
