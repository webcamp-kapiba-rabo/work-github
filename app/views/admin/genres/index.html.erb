<h2>ジャンル追加・一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= link_to "編集する", _path(@product), class:"edit_#{@product}", class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>