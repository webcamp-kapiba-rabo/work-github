<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h2 class="marker">注文履歴一覧</h2>
      <table class="table" style= "width: 900px;margin: 0 auto;">

        <thead>
          <tr bgcolor="lightgray">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>


      <% @orders.each do |order| %>
        <tbody>
          <tr>
          <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"),admin_order_path(order) %></td>

          <td><%= order.customer.family_name %>
              <%= order.customer.first_name %>
          </td>

          <% order.order_products.each do |order_product| %>
            <td><%= order_product.amount %></td>
          <% end %>

          <td><%= order.order_status %></td>

          </tr>
        </tbody>
      <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>