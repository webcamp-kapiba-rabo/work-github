<div class="container my-5">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">
    <table class="table">

        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= @order.customer.family_name %>
              <%= @order.customer.first_name %>
            </td>
          </tr>

          <tr>
            <td>注文日</td>
            <td>
              <%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            </td>
          </tr>

          <tr>
            <td>配送先</td>
          </tr>

          <tr>
            <td>支払い方法</td>
          </tr>

          <tr>
            <td>注文ステータス</td>
            <td><%= form_with url: admin_order_path(@order),local: true,method: :patch  do |form| %>
   　          　<%= select_tag 'search', options_for_select([["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]]) %>
                <%= form.submit '更新' %>
              <% end %>
            </td>

          </tr>

        </tbody>

    </table>
</div>
</div>

<div class="row mt-3">
    <div class="col-sm-9">

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

          <tbody>
            <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.product.name %></td>
              <td><%= order_product.including_tax_price/12 %></td>
              <td><%= order_product.amount %></td>
              <td><%= order_product.including_tax_price %></td>
            </tr>
            <td>
              <%= form_with model: order_product, url: admin_order_product_path(order_product, order_id: @order.id) do |f| %>
                <%= f.select :making_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"], ["製作中","製作中"], ["製作完了","製作完了"]] %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
                <% end %>
            </td>

            <% end %>
          </tbody>
      </table>
