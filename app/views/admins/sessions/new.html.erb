<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h3 class="head-line title_h2 text-center">管理者ログイン</h3>
  
      <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
        <div class="form-group col-xs-11">
          <%= f.label :"メールアドレス", class: "col-sm-5 control-label" %>
          <%= f.text_field :email, autofocus: true, class: "col-sm-6 form-control-static"%>
        </div>
        
        <div class="field form-group col-xs-11">
          <%= f.label :"パスワード", class: "col-sm-4 control-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-7 form-control-static" %>
        </div>
        
        <div class="actions col-xs-9 pull-right">
          <%= f.submit "ログイン", class: "btn btn-success btn-lg col-xs-7" %>
        </div>
      <% end %>
    </div>
  </div>
</div>