<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="marker">配送先編集</h2>
        <table class="addresses">
          <%= form_with(model: @address, url:address_path , local:true , method: :patch )do |f| %>
            <tbody>
              <tr>
                <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
                <td><%= f.text_field :postcode %></td>
              </tr>
              <tr>
                <td><%= f.label :"住所" %></td>
                <td><%= f.text_field :address ,:size=>"40" %></td>
              </tr>
              <tr>
                <td><%= f.label :"宛名" %></td>
                <td><%= f.text_field :name %></td>
                <td><%= f.submit "変更内容を保存" , class:"btn btn-success" %></td>
                <td><%= link_to "戻る", addresses_path , class: "btn btn-outline-secondary"%></td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>