

<h2 class="marker">配送先編集</h2>

<%= form_with(model: @address, url:address_path , local:true , method: :patch )do |f| %>
  <div>
    <div>
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode %>
    </div>
    <div>
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit "変更内容を保存" %>
    </div>
  </div>
<% end %>

  <div>
     <%= link_to "戻る", addresses_path , class: "btn btn-outline-secondary"%>
  </div>