<h2>会員情報編集</h2>

<%= form_with model: @customer, local:true do |f| %>
      <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :family_name, class:"form-control family_name" %>
        <%= f.text_field :first_name, class:"form-control first_name" %>
      </div>
      <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :family_name_kana, class:"form-control family_name_kana" %>
        <%= f.text_field :first_name_kana, class:"form-control first_name_kana" %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postcode, class:"form-control postcode" %>
      </div>
      <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :address, class:"form-control address" %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone_number, class:"form-control phone_number" %>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email, class:"form-control email" %>
      </div>
      <div class="action">
        <%= f.submit '編集内容を保存', class:"btn btn-success btn-customer_edit" %>
        <%= link_to "退会する", customer_quit_path, class:"btn btn-danger btn-customer_quit" %>
      </div>
      <% end %>