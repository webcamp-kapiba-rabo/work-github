<div class="container">
  <div class="row">
    <div class="col--12">
      <h2 class="marker">マイページ</h2>
      <p>
        <strong>登録情報</strong>
        <%= link_to "編集する", edit_customer_path, class:"btn btn-success btn-customer_edit" %>
      </p>

      <table class='table' border="2">
          <tr>
            <td>氏名</td>
            <td class="customer"><%= @customer.family_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td class="customer"><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td class="customer"><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td class="customer"><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td class="customer"><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td class="customer"><%= @customer.email %></td>
          </tr>
      </table>

      <p> <strong>配送先</strong> <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary btn-address_index" %></p>
      <p> <strong>注文履歴</strong> <%= link_to "一覧を見る", orders_path, class:"btn btn-primary btn-order_index" %></p>
    </div>
  </div>
</div>