<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2>注文履歴詳細</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-1 col-4">

      <div class="row">
        <strong>注文情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table">
          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>

            <tr>
              <td>配送先</td>
              <td><%= @order.address %></td>
            </tr>

            <tr>
              <td>支払い方法</td>
              <td><%= @order.payment_method %></td>
            </tr>

            <tr>
              <td>ステータス</td>
              <td><%= @order.order_status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="offset-1 col-4">
      <div class="row">
        <strong>請求情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table">
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= @order.billing_amount %></td>
            </tr>
          </tbody>
        </table>
      </div>
