<div class="container my-5">
  <div class="row">
    <h2>注文履歴一覧</h2>
    </div>
  </div>

  <div class="row mt-3">
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_products.each do |order_product| %>
              <%= order_product.product.name %>
              <% end %>
            </td>
            <td><%= order.billing_amount %></td>
            <td><%= order.order_status %></td>
            <td><%= link_to "表示する", order_path(order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>