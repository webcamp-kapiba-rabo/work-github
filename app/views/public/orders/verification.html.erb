<h2>注文情報確認</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @cart_products.each do |cart_product| %>
      <tr>
        <td><%= cart_product.name %></td>
        <td><%= cart_product.products.excluding_tax_price * 1.1 %></td>
        <td><%= cart_product.amount %></td>
        <td><%= (cart_product.amount * cart_product.products.excluding_tax_price * 1.1) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<!--order表示-->
<strong>支払い方法</strong>
<%= @order.payment_method %>

<strong>お届け先</strong>
<%= @order.postcode + @order.address + @order.name%>

<div>
  <%= link_to "注文を確定する", orders_done_path %>
</div>