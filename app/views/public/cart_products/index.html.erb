<h2>ショッピングカート</h2>


<%= link_to "カートを空にする", cart_products_path, method: :delete, class:"btn btn-danger btn-cart_product_all_destroy" %>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cart_products.each do |cart_product| %>
    <tr>
      <td>
        <%= attachment_image_tag( cart_product.product, :image, size: "55x40", fallback: "no_image.jpg") %>
        <%= cart_product.product.name %>
      </td>
      <td>
        <%= (cart_product.product.excluding_tax_price * 1.1).floor %>
      </td>
      <td>
        <%= form_with model:cart_product, url: cart_product_path(cart_product), method: :patch , local: true do |f| %>
          <%= f.number_field :amount, class: "product_amount", size: 10, min: 1, id: "amount" %>
          <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <td>
        <%= cart_product.amount * cart_product.product.excluding_tax_price %>
      </td>
      <td>
        <%= link_to " 削除する", cart_product_path(cart_product), method: :delete, class:"btn btn-danger btn-cart_product_destroy" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to " 買い物を続ける", root_path, class:"btn btn-primary btn-root" %>
  <table class="table">
    <td>合計金額</td>
    <td><%= total_price(@cart_products) %></td>
  </table>
</p>

<p><%= link_to " 情報入力に進む", new_order_path, class:"btn btn-success btn-order_new" %></p>

