<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>新機関員登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "email" %>
        </div>
        
        
        <div class="field">
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code, autofocus: true, class: "postal_code" %>
        </div>
      
        <div class="field">
          <%= f.label :"住所" %><br>
          <%= f.text_field :address, autofocus: true,  class: "address" %>
        </div>
        
        
        <div class="field">
          <%= f.label :"パスワード(６文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>
        
        <div class="field">
          <%= f.label :"パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="actions">
          <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
      <%= render "publics/shared/links" %>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>