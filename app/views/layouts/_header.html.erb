<header>
  <link href="https://fonts.googleapis.com/css?family=Montserrat+Subrayada" rel="stylesheet">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ffc37a;">
    <div class="container">
      <a class="navbar-brand" href="/"><span><i class="far fa-moon"></i>  Naganocake</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if admin_signed_in? %>  
          <li><%= link_to ' products',admin_products_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' customers',admin_customers_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' orders',admin_orders_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' genres',admin_genres_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' logout', destroy_admin_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% elsif customer_signed_in? %>
          <li class="header-name">
            ようこそ、<%= current_customer.family_name %>さん！

          </li>
          <li><%= link_to ' mypage',customer_path(current_customer),class: 'fas fa-home nav-link text-light' %></li>
          <li><%= link_to ' products',products_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' cart',cart_products_path ,class: 'fas fa-shopping-cart nav-link text-light'%></li>
          <li><%= link_to ' logout', destroy_customer_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% else %>
          <li><%= link_to ' About',homes_about_path,class: 'fas fa-comment-dots nav-link text-light' %></li>
          <li><%= link_to ' products',products_path,class: 'fas fa-gift nav-link text-light' %></li>
          <li><%= link_to ' sign up', new_customer_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to ' login', new_customer_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
